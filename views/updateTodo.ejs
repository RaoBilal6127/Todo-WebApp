<%- include("partials/header") %>
    <div class="table-container">
        <h2 class="todo-title">Update Todo</h2>
        <div>
            <a class="btn" href="/">Back</a>
            <form action="/update-todo/<%= todo._id %>" method="post">
                <div clas="update-todo">
                    <div class="form-group">
                        <label for="title" class="text-light">Title</label>
                        <input type="text" name="title" value="<%= todo.title %>" placeholder="Type Title Here">
                    </div>
                    <div class="form-group">
                        <label for="desc" class="text-light">Description</label>
                        <input type="text" name="desc" value="<%= todo.desc %>" placeholder="Type Description Here">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn">Save</button>
                    </div>
                </div>
        </div>
        </form>
    </div>
    </div>
    <%- include("partials/footer") %>